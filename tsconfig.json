{
    "compilerOptions": {
        "target": "es6",
        //the module stuff does not work in Thunderbird Addons (or I do not know how to make it work...)
        "module": "none" ,
        //TODO: needed only for debugging?
        "sourceMap": true,

        "outDir": "./built/release",
        "allowJs": false,
        "rootDir": "src",

        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        //TODO: also in release?
        "removeComments":false,

        "forceConsistentCasingInFileNames":true
    }
}