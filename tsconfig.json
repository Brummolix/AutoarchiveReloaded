{
    "compilerOptions": {
        "target": "es6",
        //the module stuff does not work in Thunderbird Addons (or I do not know how to make it work...)
        "module": "none" ,
        //disabled because it does not work in Thunderbird (NetworkError when attempting to fetch resource)
        //if it would work we could enable it for debugging purposes and disable it for the release
        "sourceMap": false,

        "outDir": "./built/release",
        "allowJs": false,
        "rootDir": "src",

        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        //only for debug release
        "removeComments":false,

        "forceConsistentCasingInFileNames":true
    }
}