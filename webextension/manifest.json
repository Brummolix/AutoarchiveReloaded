{
	"manifest_version":2,
	"version":"0.9.9.6",
	"name":"AutoarchiveReloaded",
	"description": "Automatically archives old mails",
	"author": "Brummolix (original version created by Alexey Egorov)",
	"homepage_url": "http://brummolix.github.io/AutoarchiveReloaded/",
	
	"options_ui": 
	{
		"page": "options.html",
		"browser_style":true,
		"open_in_tab":true
	},
	
	"permissions": ["storage"],

	"applications": {
		"gecko": {
		  "id": "AutoarchiveReloaded@brummolix.addons.mozilla.org"
		}
	},

	"background": {
		"scripts": ["optionHelper.js","background.js"]
	},

	"default_locale":"en"
}