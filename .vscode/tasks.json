{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "typescript",
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"problemMatcher": ["$tsc"]
		},
		{
			"type": "grunt",
			"task": "default",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": ["$tsc", "$tslint4"]
		},
		{
			"type": "grunt",
			"task": "release",
			"problemMatcher": ["$tsc", "$tslint4"]
		}
	]
}
